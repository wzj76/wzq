<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/udesk_iv_picture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/udesk_100"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImage="@drawable/udesk_image_placeholder" />

    <View
        android:id="@+id/udesk_v_selector"
        android:layout_width="match_parent"
        android:layout_height="@dimen/udesk_100"
        android:background="#80333333"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/ll_check"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="@dimen/udesk_4">

        <TextView
            android:id="@+id/udesk_check"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/udesk_checkphoto_bg_select_false"
            android:gravity="center"
            android:textColor="@color/udesk_color_bg_white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/udesk_duration"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/udesk_photo_time_bg"
        android:drawableLeft="@drawable/udesk_video_icon"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingTop="8dp"
        android:text="00:00"
        android:textColor="@color/udesk_color_bg_white"
        android:textSize="@dimen/udesk_sp12"
        android:visibility="visible" />

</RelativeLayout>